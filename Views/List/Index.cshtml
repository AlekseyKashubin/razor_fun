<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Razor Fun</title>
</head>



<body>


    <h1>Here are some delicious foods!</h1>
@{    
    List<string> FoodList = new List<string>() 
        {"Apple Pie", "Pizza", "Cinnamon Rolls", "Lasagna", "Donuts", "Chocolate Cake", "Burritos",};


    foreach(string word in FoodList)
    {
        @if(word[0] == 'C')
            {
                <p style="color:red;">@word</p>
        }else {
            <p>@word</p>
        }

    }
}


</body>









